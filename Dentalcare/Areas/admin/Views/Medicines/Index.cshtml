@using Dental.Help
@model IEnumerable<Dentalcare.Models.Medicine>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/admin/Views/Shared/MyLayout.cshtml";
}

<!-- HTML -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách thuốc</h6>
    </div>
    <div style="margin-left: 20px; margin-top: 20px">
        <button type="button" class="btn btn-info" onclick="window.location='@Url.Action("Create", "Medicines")'">Thêm mới</button>
    </div>
    <div class="card-body">
        <table class="table table-bordered" id="myTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ConsumableMaterial.Material.name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.hide)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.meta)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.datebegin)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.new_order)
                    </th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ConsumableMaterial.Material.name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.price)
                        </td>
                        <td>
                            @(item.hide ? "Ẩn":"Hiển thị")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.meta)
                        </td>
                        <td>
                            @(item.datebegin != null ? item.datebegin.ToString("dd/MM/yyyy") : "")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.new_order)
                        </td>
                        <td>
                            @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-pencil'></span>", "Edit", "Edit", "Medicines", routeValues: new { id = item.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-default" })
                            @Html.NoEncodeActionLink("<span class='glyphicon glyphicon-zoom-in'></span>", "Detail", "Details", "Medicines", routeValues: new { id = item.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-primary" })
                            @*@Html.NoEncodeActionLink("<span class='glyphicon glyphicon-trash'></span>", "Delete", "Delete", "ConsumableMaterials", routeValues: new { id = item.id }, htmlAttributes: new { data_modal = "", @class = "btn btn-danger" })*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts {
    <link href="@Url.Content("~/Areas/admin/Content/vendor/datatables/dataTables.bootstrap4.min.css")" rel="stylesheet">
    <!-- Bootstrap core JavaScript-->
    <!-- Page level plugins -->
    <script src="@Url.Content("~/Areas/admin/Content/vendor/datatables/jquery.dataTables.min.js")"></script>
    <script src="@Url.Content("~/Areas/admin/Content/vendor/datatables/dataTables.bootstrap4.min.js")"></script>

    <!-- Page level custom scripts -->
    <script src="@Url.Content("~/Areas/admin/Content/js/demo/datatables-demo.js")"></script>
}

