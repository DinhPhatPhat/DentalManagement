
@{
    ViewBag.Title = "Doctors";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

<section class="home-slider owl-carousel">
    <div class="slider-item bread-item" style="background-image: url('../../Content/images/bg_1.jpg');"
         data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container" data-scrollax-parent="true">
            <div class="row slider-text align-items-end">
                <div class="col-md-7 col-sm-12 ftco-animate mb-5">
                    <p class="breadcrumbs" data-scrollax=" properties: { translateY: '70%', opacity: 1.6}"><span class="mr-2"><a href="/">Home</a></span> <span>Dentists</span></p>
                    <h1 class="mb-3" data-scrollax=" properties: { translateY: '70%', opacity: .9}">
                        Nha sĩ giàu kinh nghiệm
                    </h1>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center mb-5 pb-5">
            <div class="col-md-7 text-center heading-section ftco-animate">
                <h2 class="mb-3">Hãy gặp gỡ nha sĩ giàu kinh nghiệm của chúng tôi</h2>
                <p>
                    Với kinh nghiệm dày dặn và sự am hiểu sâu sắc về nha khoa, đội ngũ nha sĩ của chúng tôi cam kết mang đến cho bạn những dịch vụ chăm sóc răng miệng toàn diện và chất lượng cao. Chúng tôi luôn đặt sự hài lòng của khách hàng lên hàng đầu.
                </p>
            </div>
        </div>
        <!--Dentists row-->
        <div class="row">
            @foreach (var dentist in ViewBag.dentists) 
            {
                <div class="col-lg-3 col-md-6 d-flex mb-sm-4 ftco-animate">
                    <div class="staff">
                        <div class="img mb-4" style="background-image: url('@Url.Content("~/" + dentist.Avatar)');"></div>
                        <div class="info text-center">
                            <h3><a href="teacher-single.html">@dentist.Name</a></h3>
                            <span class="position">@dentist.Title</span>
                            <div class="text">
                                <p>@dentist.Description</p>
                                <ul class="ftco-social">
                                    <li class="ftco-animate">
                                        <a href="mailto:@dentist.Email"><span class="icon-gmail"></span></a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

@RenderPage("~/Views/Shared/Milestone.cshtml");

