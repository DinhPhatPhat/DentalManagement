
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MyLayout.cshtml";
}

@model List<Dentalcare.Services.CommentManager.CommentInfo>

<section class="ftco-section testimony-section bg-light ">
    <div class="container">
        <div class="row justify-content-center mb-5 pb-3">
            <div class="col-md-7 text-center heading-section ftco-animate">
                <h2 class="mb-2">Bình luận</h2>
                <span class="subheading">Đánh giá của khách hàng</span>
            </div>
        </div>
        <div class="row justify-content-center ftco-animate">
            <div class="col-md-8">
                <div class="carousel-testimony owl-carousel ftco-owl">
                    @foreach (var comment in ViewBag.Comments)
                    { 
                        <div class="item">
                            <div class="testimony-wrap p-4 pb-5">
                                <div class="user-img mb-5" style="background-image: url('@Url.Content("~/" + comment.Image)')">
                                    <span class="quote d-flex align-items-center justify-content-center">
                                        <i class="icon-quote-left"></i>
                                    </span>
                                </div>
                                <div class="text text-center">
                                    <p class="mb-5">
                                        @comment.Message
                                    </p>
                                    <p class="name">@comment.PersonName</p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>


<style>
    body {
        padding: 0px;
        background: linear-gradient(135deg, #71b7e6, #9b59b6);
    }
    .comments-container {
        max-width: 900px;
        margin: 160px auto 10px auto;
        padding: 20px;
        background-color: snow;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    .comment-box {
        padding: 15px;
        border-radius: 10px;
        margin-bottom: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
        background-color: snow;
    }

    .comment-header {
        display: flex;
        align-items: center;

    }

    .comment-image {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        object-fit: cover;
        margin-right: 15px;
    }

    .comment-details {
        display: flex;
        flex-direction: column;
    }

    .comment-title {
        background: linear-gradient(135deg, #ff7e5f, #feb47b);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-size: 1.2em;
        font-weight: bold;
        margin: 0;
        color: #333;
    }

    .comment-author {
        font-size: 0.9em;
        color: #555;
    }

    .comment-date {
        font-size: 0.8em;
        color: #888;
    }

    .comment-content {
        margin-top: 10px;
        font-size: 1em;
        line-height: 1.6;
        color: #444;
    }
</style>

